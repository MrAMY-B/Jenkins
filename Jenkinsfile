pipeline {
    agent any
    stages{
         stage('build'){
              steps{
                 echo '----------------------------------'
                 echo 'hello folks this is building stage'
                 echo '----------------------------------'
              }
         }
         stage('Test'){
              steps{
                 echo '----------------------------------'
                 echo 'hello folks this is Testing stage'
                 echo '----------------------------------'
              }
         }
         stage('Deploy'){
              steps{
                 echo '----------------------------------'
                 echo 'hello folks this is Deployement stage'
                 echo '----------------------------------'
              }
         }
    }
}

